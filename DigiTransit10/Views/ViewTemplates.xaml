<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DigiTransit10.Views"
    xmlns:vm="using:DigiTransit10.ViewModels"
    xmlns:lclCtls="using:DigiTransit10.Controls"
    xmlns:apiModels="using:DigiTransit10.Models.ApiModels">

    <DataTemplate x:Name="TripResultTemplate">
        <ListView x:Name="TripResultList"
                  DataContext="{Binding Source={StaticResource Locator}, Path=TripResult}"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollMode="Auto"
                  ScrollViewer.IsHorizontalRailEnabled="True"
                  ScrollViewer.IsVerticalRailEnabled="False"                         
                  ItemsSource="{Binding TripResults, Mode=OneWay}"
                  HorizontalAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <lclCtls:TripPlanStrip StripItinerary="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </DataTemplate>

</ResourceDictionary>
