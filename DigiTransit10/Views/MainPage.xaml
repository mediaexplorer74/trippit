<Page x:Class="DigiTransit10.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Behaviors="using:Template10.Behaviors"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:lclCtls="using:DigiTransit10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:DigiTransit10.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:DigiTransit10.ViewModels"
      xmlns:models="using:DigiTransit10.Models"
      xmlns:conv="using:DigiTransit10.Converters"
      xmlns:apiModels="using:DigiTransit10.Models.ApiModels"
      mc:Ignorable="d"
      DataContext="{Binding Source={StaticResource Locator}, Path=Main}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ViewTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Name="FavoritesTemplate" x:DataType="vm:FavoritesViewModel">
                <Grid>
                    <TextBlock x:Name="EmptyListTextBlock" 
                               Visibility="Visible" 
                               Text="{Binding Source={StaticResource Strings}, Path=Favorites_EmptyList}"
                               Style="{StaticResource EmptyListHeaderStyle}">
                        <Interactivity:Interaction.Behaviors>
                            <Core:DataTriggerBehavior Binding="{Binding ElementName=FavoritesListView, Path=Items.Count}"
                                                      ComparisonCondition="GreaterThan"
                                                      Value="0">
                                <Core:ChangePropertyAction TargetObject="{Binding ElementName=EmptyListTextBlock}"
                                                           PropertyName="Visibility"
                                                           Value="Collapsed"/>
                             </Core:DataTriggerBehavior>
                             <Core:DataTriggerBehavior Binding="{Binding ElementName=FavoritesListView, Path=Items.Count}"
                                                       ComparisonCondition="Equal"
                                                       Value="0">
                                <Core:ChangePropertyAction TargetObject="{Binding ElementName=EmptyListTextBlock}"
                                                           PropertyName="Visibility"
                                                           Value="Visible"/>
                            </Core:DataTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </TextBlock>
                    <ListView x:Name="FavoritesListView"
                              ItemsSource="{x:Bind Favorites, Mode=OneWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:IFavorite">
                                <TextBlock Text="{x:Bind UserChosenName}" Style="{StaticResource BodyTextBlockStyle}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveVisualStateGroup">
                <VisualState x:Name="VisualStateNarrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for narrow view  -->
                        <Setter Target="TripPlannerPivot.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateNormal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for normal view  -->
                        <Setter Target="TripPlannerHub.Visibility" Value="Visible" />
                        <Setter Target="TripResultsPanel.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for wide view  -->
                        <Setter Target="TripPlannerHub.Visibility" Value="Visible" />
                        <Setter Target="TripResultsPanel.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <controls:PageHeader x:Name="PageHeader" 
                             RelativePanel.AlignLeftWithPanel="True"
                             RelativePanel.AlignRightWithPanel="True"
                             RelativePanel.AlignTopWithPanel="True"                             
                             Text="{Binding Source={StaticResource Strings}, Path=MainPage_Header}">

            <!--  secondary commands  -->
            <controls:PageHeader.SecondaryCommands>
            </controls:PageHeader.SecondaryCommands>
        </controls:PageHeader>
        <ScrollViewer VerticalScrollBarVisibility="Auto"                      
                      RelativePanel.Below="PageHeader"
                      RelativePanel.AlignLeftWithPanel="True"
                      RelativePanel.AlignRightWithPanel="True"                      
                      RelativePanel.AlignBottomWithPanel="True">
            <RelativePanel>

                <!--Narrow view-->
                <Pivot x:Name="TripPlannerPivot"
                       x:DeferLoadStrategy="Lazy"     
                       RelativePanel.AlignTopWithPanel="True"
                       RelativePanel.AlignBottomWithPanel="True"
                       RelativePanel.AlignLeftWithPanel="True"                                     
                       Visibility="Collapsed">
                    <PivotItem x:Name="TripFormPivotItem" 
                               DataContext="{x:Bind ViewModel.TripFormViewModel, Mode=OneWay}"
                               Header="{Binding Source={StaticResource Strings}, Path=TripForm_PlanATripHeader}">
                        <PivotItem.ContentTemplate>
                            <DataTemplate x:DataType="vm:TripFormViewModel">
                                <StackPanel>
                                    <lclCtls:DigiTransitSearchBox x:Name="FromBox"
                                                                  Header="{Binding Source={StaticResource Strings}, Path=MainPage_FromHeader}"
                                                                  SelectedPlace="{x:Bind FromPlace, Mode=TwoWay}"/>
                                    <lclCtls:DigiTransitSearchBox x:Name="ToBox"
                                                                  Header="{Binding Source={StaticResource Strings}, Path=MainPage_ToHeader}"
                                                                  SelectedPlace="{x:Bind ToPlace, Mode=TwoWay}"
                                                                  Margin="0 10 0 0" />
                                    <TimePicker x:Name="TimePicker"
                                                Time="{x:Bind SelectedTime, Mode=TwoWay}"
                                                HorizontalAlignment="Stretch"
                                                Margin="0 10 0 0" />
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                                        <RadioButton x:Name="DepartureRadioButon"
                                                     GroupName="TimeType"
                                                     Content="{Binding Source={StaticResource Strings}, Path=TimeType_Departure}"
                                                     IsChecked="{x:Bind IsDepartureChecked, Mode=TwoWay}" />
                                        <RadioButton x:Name="ArrivalRadioButton"
                                                     GroupName="TimeType"
                                                     Content="{Binding Source={StaticResource Strings}, Path=TimeType_Arrival}"
                                                     IsChecked="{x:Bind IsArrivalChecked, Mode=TwoWay}" />
                                    </StackPanel>
                                    <DatePicker x:Name="DatePicker"
                                                HorizontalAlignment="Stretch"
                                                Margin="0 10 0 0" 
                                                Header="{Binding Source={StaticResource Strings}, Path=LiteralDate}"
                                                Date="{x:Bind SelectedDate, Mode=TwoWay}"/>
                                    <Button x:Name="PlanTripButton"
                                            Margin="0 10 0 0" 
                                            Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                                            Foreground="White"
                                            HorizontalAlignment="Stretch"
                                            Content="{Binding Source={StaticResource Strings}, Path=TripForm_PlanTripButton}"                            
                                            Command="{x:Bind PlanTripNarrowViewCommand}"/>
                                </StackPanel>
                            </DataTemplate>
                        </PivotItem.ContentTemplate>
                    </PivotItem>
                    <PivotItem x:Name="FavoritesPivot" 
                               DataContext="{x:Bind ViewModel.FavoritesViewModel, Mode=OneWay}"
                               Header="{Binding Source={StaticResource Strings}, Path=Favorites_FavoritesHeader}"                        
                               ContentTemplate="{StaticResource FavoritesTemplate}" />

                </Pivot>

                <!--Wide view-->
                <Hub x:Name="TripPlannerHub"
                     x:DeferLoadStrategy="Lazy"             
                     RelativePanel.AlignLeftWithPanel="True"             
                     Visibility="Collapsed">
                    <HubSection x:Name="TripFormHubSection"                        
                                DataContext="{x:Bind ViewModel.TripFormViewModel, Mode=OneWay}"
                                Header="{Binding Source={StaticResource Strings}, Path=TripForm_PlanATripHeader}">
                        <HubSection.ContentTemplate>
                            <DataTemplate x:DataType="vm:TripFormViewModel">
                                <StackPanel>
                                    <lclCtls:DigiTransitSearchBox x:Name="FromBox"
                                                                  Header="{Binding Source={StaticResource Strings}, Path=MainPage_FromHeader}"
                                                                  SelectedPlace="{x:Bind FromPlace, Mode=TwoWay}"/>
                                    <lclCtls:DigiTransitSearchBox x:Name="ToBox"
                                                                  Header="{Binding Source={StaticResource Strings}, Path=MainPage_ToHeader}"
                                                                  SelectedPlace="{x:Bind ToPlace, Mode=TwoWay}"
                                                                  Margin="0 10 0 0" />
                                    <TimePicker x:Name="TimePicker"
                                                Time="{x:Bind SelectedTime, Mode=TwoWay}"
                                                HorizontalAlignment="Stretch"
                                                Margin="0 10 0 0" />
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                                        <RadioButton x:Name="DepartureRadioButon"
                                                     GroupName="WideTimeType"
                                                     Content="{Binding Source={StaticResource Strings}, Path=TimeType_Departure}"
                                                     IsChecked="{x:Bind IsDepartureChecked, Mode=TwoWay}" />
                                        <RadioButton x:Name="ArrivalRadioButton"
                                                     GroupName="WideTimeType"
                                                     Content="{Binding Source={StaticResource Strings}, Path=TimeType_Arrival}"
                                                     IsChecked="{x:Bind IsArrivalChecked, Mode=TwoWay}" />
                                    </StackPanel>
                                    <DatePicker x:Name="DatePicker"
                                                HorizontalAlignment="Stretch"
                                                Margin="0 10 0 0" 
                                                Header="{Binding Source={StaticResource Strings}, Path=LiteralDate}"
                                                Date="{x:Bind SelectedDate, Mode=TwoWay}"/>
                                    <Button x:Name="PlanTripButton"
                                            Margin="0 10 0 0" 
                                            Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                                            Foreground="White"
                                            HorizontalAlignment="Stretch"
                                            Content="{Binding Source={StaticResource Strings}, Path=TripForm_PlanTripButton}"                            
                                            Command="{x:Bind PlanTripWideViewCommand}"/>

                                </StackPanel>
                            </DataTemplate>
                        </HubSection.ContentTemplate>
                    </HubSection>
                    <HubSection x:Name="FavoritesHubSection"
                                RelativePanel.AlignBottomWith="TripFormHubSection"
                                DataContext="{x:Bind ViewModel.FavoritesViewModel, Mode=OneWay}"
                                Header="{Binding Source={StaticResource Strings}, Path=Favorites_FavoritesHeader}"
                                ContentTemplate="{StaticResource FavoritesTemplate}"/>
                </Hub>

                <ContentControl x:Name="TripResultsPanel" 
                        x:DeferLoadStrategy="Lazy"
                        Visibility="Collapsed"                        
                        RelativePanel.Below="TripPlannerHub"                                                
                        RelativePanel.AlignHorizontalCenterWithPanel="True"
                        DataContext="{x:Bind ViewModel.TripResultViewModel, Mode=OneWay}"
                        ContentTemplate="{StaticResource TripResultTemplate}"/>
            </RelativePanel>
        </ScrollViewer>


    </RelativePanel>
</Page>

