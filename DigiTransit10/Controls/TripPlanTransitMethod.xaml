<UserControl
    x:Class="DigiTransit10.Controls.TripPlanTransitMethod"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DigiTransit10.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="TripPlanRootTransitRootLayout">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <!---Set in code-behind. Easier that way.-->
        <TextBlock x:Name="NameOrDistanceBlock"
                   Grid.Row="0"
                   HorizontalAlignment="Center"/>
        <FontIcon x:Name="TransitModeIcon"
                  Grid.Row="1"
                  HorizontalAlignment="Center"
                  FontFamily="{StaticResource HslPictoFrameFont}"
                  FontSize="35"
                  Foreground="{x:Bind TransitMode, Converter={StaticResource TransitModeToForegroundBrushConverter}}"
                  Glyph="{x:Bind TransitMode, Converter={StaticResource TransitModeToFontIconConverter}}"/>
    </Grid>
</UserControl>
